---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="text-2xl">Simple Penguin</h1>
  <select name="species" id="species">
  <option value="">Toutes les esp√®ces</option>
  <option value="Adelie">Adelie</option>
  <option value="Chinstrap">Chinstrap</option>
  <option value="Gentoo">Gentoo</option>
</select>
  <div id="myplot"></div>
  

<script>
  import * as Plot from "@observablehq/plot";
  import penguins from "../assets/penguins.json";

  const selectSpecies = document.querySelector("#species") as HTMLSelectElement;

  function renderPlot() {
    const species = selectSpecies?.value;
    const div = document.querySelector("#myplot");
    
    if (div) {
      div.innerHTML = "";
    }
    
    const plot = Plot.plot({
      marks: [
        Plot.dot(penguins.filter(d => !species || d.species === species), {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    });
    div?.append(plot);
  }

  selectSpecies?.addEventListener("change", renderPlot);
  renderPlot();
</script>
</Layout>